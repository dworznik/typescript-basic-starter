{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "__tests__/*": [
        "__tests__/*"
      ],
      "@helpers/*": [
        "__tests__/helpers/*"
      ]
    },
    "rootDirs": [
      "src",
      "__tests__/helpers"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "plugins": [
      {
        "transform": "ts-transformer-imports"
      }
    ],
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
