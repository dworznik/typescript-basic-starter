{
  "name": "@dworznik/typescript-basic-starter",
  "version": "1.0.0",
  "description": "TypeScript basic project template",
  "engines": {
    "node": ">= 10 <15"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .ts"
  },
  "keywords": [
    "typescript",
    "starter"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Patryk DwÃ³rznik",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsutils": "^3.17.1",
    "typescript": "^4.0.2"
  }
}
